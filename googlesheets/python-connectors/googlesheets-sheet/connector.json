{
    "meta" : {
        "label" : "Google Sheets document",
        "description" : "A simple connector to read a sheet from a Google Sheets document"
    },

    "readable" : true,
    "writable" : true,

    "params": [
        {
            "name": "credentials",
            "label": "Service Account JSON",
            "description": "File provided by Google. Read more here: http://gspread.readthedocs.io/en/latest/oauth2.html",
            "type": "TEXTAREA",
            "mandatory" : true
        },
        {
            "name": "doc_id",
            "label": "Document id",
            "description": "Can be extracted from the spreadsheet's URL",
            "type": "STRING",
            "mandatory" : true
        },
        {
            "name": "tab_id",
            "label": "Sheet name",
            "type": "STRING",
            "mandatory" : true
        },
        {
            "name": "result_format",
            "label": "When importing, choose the format",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "first-row-header",
                    "label": "First row contains column headers"
                },
                {
                    "value": "no-header",
                    "label": "Generate columns with no names"
                },
                {
                    "value": "array",
                    "label": "A single column with an array of columns per row"
                }
            ],
            "mandatory": true,
            "defaultValue": "first-row-header"
        }
    ]
}